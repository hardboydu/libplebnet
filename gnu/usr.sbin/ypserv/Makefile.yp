$(PASSWD): $(MASTER)
	@echo "Creating new $@ file from $(MASTER)..."
	$(RM) $@
	@if [ ! $(UNSECURE) ]; then \
	$(RCAT) $(MASTER) | \
	$(AWK) -F: '{if ($$1 != "+") \
		print $$1":*:"$$3":"$$4":"$$8":"$$9":"$$10}' $^ \
		> $(PASSWD) ; \
	else $(RCAT) $(MASTER) | \
	$(AWK) -F: '{if ($$1 != "+") \
		print $$1":"$$2":"$$3":"$$4":"$$8":"$$9":"$$10}' $^ \
		> $(PASSWD) ; fi


