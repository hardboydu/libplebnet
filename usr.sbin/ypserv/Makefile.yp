netgroup: $(NETGROUP) netgroup.byhost netgroup.byuser
	@echo "Updating $@..."
	$(RM) $@
	$(CAT) $(NETGROUP) | \
	$(AWK) '{ if ($$1 != "" && $$1 != "#" && $$1 != "+") \
