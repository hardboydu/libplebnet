srcdir		= @srcdir@
VPATH		= @srcdir@

SHELL		= /bin/sh

@SET_MAKE@

SUBDIRS		= des krb kdb kadm acl kafs roken otp auth sl editline

all:
		for i in $(SUBDIRS); \
		do (cd $$i && $(MAKE) $(MFLAGS) all); done

Wall:
		make CFLAGS="-g -Wall -Wno-comment -Wmissing-prototypes -Wmissing-declarations -D__USE_FIXED_PROTOTYPES__"

install:
		for i in $(SUBDIRS); \
		do (cd $$i && $(MAKE) $(MFLAGS) install); done

uninstall:
		for i in $(SUBDIRS); \
		do (cd $$i && $(MAKE) $(MFLAGS) uninstall); done

check:		all
		for i in $(SUBDIRS); \
		do (cd $$i && $(MAKE) $(MFLAGS) check); done

clean:
		for i in $(SUBDIRS); \
		do (cd $$i && $(MAKE) $(MFLAGS) clean); done

mostlyclean:	clean

distclean:
		for i in $(SUBDIRS); \
		do (cd $$i && $(MAKE) $(MFLAGS) distclean); done
		rm -f Makefile config.status *~

realclean:
		for i in $(SUBDIRS); \
		do (cd $$i && $(MAKE) $(MFLAGS) realclean); done
