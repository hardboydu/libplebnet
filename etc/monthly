#!/bin/sh -
#
#	@(#)monthly	5.5 (Berkeley) 6/17/91
#

PATH=/bin:/usr/bin:/sbin:/usr/sbin
host=`hostname -s`
echo "Subject: $host monthly run output"

echo ""
echo "Doing login accounting:"
ac -p | sort -nr +1

if [ -f /etc/monthly.local ]; then
    echo ""
    echo "Running monthly.local:"
    sh /etc/monthly.local
fi
