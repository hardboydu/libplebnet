#!/bin/sh
#
# $Id$
#

if [ -f /var/account/acct ] ; then
    echo ""
    echo "Rotating accounting logs and gathering statistics:"
    cd /var/account
    if [ -f acct.2 ] ; then mv -f acct.2 acct.3 ; fi
    if [ -f acct.1 ] ; then mv -f acct.1 acct.2 ; fi
    if [ -f acct.0 ] ; then mv -f acct.0 acct.1 ; fi
    cp -pf acct acct.0
    sa -s > /dev/null
fi
