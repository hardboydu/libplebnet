#!/bin/sh
#
# $NetBSD: ypbind,v 1.5 2002/03/22 04:34:01 thorpej Exp $
# $FreeBSD$
#

# PROVIDE: ypbind
# REQUIRE: ypserv
# BEFORE:  DAEMON
# KEYWORD: FreeBSD NetBSD

. /etc/rc.subr

name="ypbind"
command="/usr/sbin/${name}"
start_precmd="ypbind_precmd"

case `${CMD_OSTYPE}` in
FreeBSD)
	rcvar="nis_client_enable"
	command_args="${nis_client_flags}"
	;;
NetBSD)
	rcvar=$name
	;;
esac

ypbind_precmd()
{
	_domain=`domainname`
	if [ -z "$_domain" ]; then
		warn "domainname(1) is not set."
		return 1
	fi
}

load_rc_config $name
run_rc_command "$1"
