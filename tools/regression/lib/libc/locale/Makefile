TESTS=	test-mbrtowc	\
	test-wcrtomb	\
	test-mbsrtowcs	\
	test-wcsrtombs	\
	test-btowc	\
	test-mbrlen	\
	test-mbtowc	\
	test-wctomb	\
	test-mbstowcs	\
	test-wcstombs	\
