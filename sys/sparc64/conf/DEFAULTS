# $FreeBSD$

machine		sparc64

# Pseudo devices.
device		mem		# Memory and kernel memory devices

# UART chips on this platform
device		uart_ns8250
device		uart_sab82532
device		uart_z8530

# KSE support went from being default to a kernel option
options 	KSE

# Default partitioning schemes
options 	GEOM_BSD
options 	GEOM_SUNLABEL

