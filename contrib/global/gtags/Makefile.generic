PROG   = gtags
CC     = gcc
LIBS   = -L../lib -lutil -ldb
CFLAGS = -O -I../lib -I/usr/include/db
DEPLIBS= ../lib/libutil.a
OBJS   = gtags.o
BINDIR = /usr/bin
MANDIR = /usr/man

all: $(PROG)

$(PROG): $(OBJS) $(DEPLIBS)
	$(CC) -o $(PROG) $(OBJS) $(LIBS)
install:
	cp $(PROG) $(BINDIR)
	chmod 755 $(BINDIR)/$(PROG)
	cp $(PROG).1 $(MANDIR)/man1
	chmod 644 $(MANDIR)/man1/$(PROG).1
clean:
	rm -f $(PROG) $(OBJS)
