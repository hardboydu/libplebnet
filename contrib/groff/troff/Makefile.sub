  dictionary.o \
  reg.o \
  number.o \
  majorminor.o
CCSRCS=\
  $(srcdir)/env.cc \
  $(srcdir)/node.cc \
  $(srcdir)/input.cc \
  $(srcdir)/div.cc \
  $(srcdir)/symbol.cc \
  $(srcdir)/dictionary.cc \
  $(srcdir)/reg.cc \
  $(srcdir)/number.cc \
