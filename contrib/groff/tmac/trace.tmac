.\" trace.tmac
.\"
.\" Load this before a macro package that you want to trace.
.
.eo
.
.rn de !!de
.
.!!de de
.  ecs
.  ec
.  !!de \$1
.    ie "\$1"\\$0" .tm *** trace enter: \\$0 \\$@
.    el .tm *** trace enter \$1: \\$0 \\$@
.    nop \\*[!!\$1]\\
.    ie "\$1"\\$0" .tm *** trace exit: \\$0 \\$@
.    el .tm *** trace exit \$1: \\$0 \\$@
\..
.
.  ds !!d1 !!\$1
.  ds !!d2 \$2
.
.  ecr
.  dei !!d1 !!d2
..
.
.ec
.
.\" EOF
