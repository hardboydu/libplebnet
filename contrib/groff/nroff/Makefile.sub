MAN1=nroff.n
NAMEPREFIX=$(g)
CLEANADD=nroff

all: nroff

nroff: nroff.sh
	rm -f $@
	sed "$(SH_SCRIPT_SED_CMD)"  $(srcdir)/nroff.sh >$@
	chmod +x $@

install_data: nroff
	-test -d $(bindir) || $(mkinstalldirs) $(bindir)
	-rm -f $(bindir)/$(NAMEPREFIX)nroff
	$(INSTALL_SCRIPT) nroff $(bindir)/$(NAMEPREFIX)nroff

uninstall_sub:
	-rm -f $(bindir)/$(NAMEPREFIX)nroff
